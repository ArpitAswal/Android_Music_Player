<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_playlist_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:backgroundTint="@null"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_gradient_bg"
        android:elevation="12dp">

        <ImageView
            android:id="@+id/add_playlists_folder_ImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Playlist Folder"
            android:elevation="12dp"
            android:maxWidth="60dp"
            android:maxHeight="60dp"
            android:src="@drawable/favorite_white" />

    </FrameLayout>

    <TextView
        android:id="@+id/add_playlistTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="start|center_vertical"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/abhaya_libre"
        android:gravity="start"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/add_playlist_Checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/unchecked_circle"
        android:button="@null"
        android:checked="false" />

</LinearLayout>
